---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer/Footer.astro";
---

<MainLayout title="Página no encontrada - Rugby Champagne" noindex>
	<Header />
	<main style="padding: 4rem 0; text-align: center;">
		<div class="wrapper">
			<h1 style="font-size: 4em; font-weight: 900; margin-bottom: 1rem;">404</h1>
			<h2 style="font-size: 1.5em; margin-bottom: 1rem;">Página no encontrada</h2>
			<p style="color: var(--col-primary-60); margin-bottom: 2rem;">
				La página que buscas no existe o fue movida.
			</p>
			<a href="/" class="btn-wide" style="display: inline-block; padding: 0.8rem 2rem; background: var(--col-azul); color: #fff; border-radius: 25px; font-weight: 700;">
				Volver al inicio
			</a>
		</div>
	</main>
	<Footer />
</MainLayout>
